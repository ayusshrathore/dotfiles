################################# Variables ##############################

## Logo key. Use Mod1 for Alt.
set $mod Mod4

## Player
set $next playerctl next
set $previous playerctl previous
set $pause playerctl play-pause

## Terminal 
set $term alacritty

## Browser
set $browser google-chrome-stable

## VS Code
set $code code

## Telegram
set $telegram telegram-desktop

## Nautilus
set $files nautilus

## Power
set $power "bash ~/.config/sway/scripts/powerctrl.sh"

## Menu
set $menu exec wofi --show=drun --line=7 --width=300

## Network Connect
set $connect alacritty -e nmtui-connect

## Bluetooth Connect
set $bt alacritty -e ~/.config/sway/scripts/btconnect.sh

## Workspaces
set $next-workspace-move ~/.config/sway/scripts/next-workspace-move-container
set $prev-workspace-move ~/.config/sway/scripts/prev-workspace-move-container

################################## Autostart ###############################

## Autotiling
exec autotiling-rs

## Enable xwayland support
xwayland enable

## Enables inhibit_idle when playing audio
exec sway-audio-idle-inhibit

## GTK Settings
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'paradise'
    gsettings set $gnome-schema icon-theme 'Papirus-Dark'
    gsettings set $gnome-schema font-name 'Inter 10.5'
    gsettings set $gnome-schema document-font-name 'Inter 10.5'
    gsettings set $gnome-schema monospace-font-name 'JetBrainsMono Nerd Font 10'
}

## Dunst
exec --no-startup-id dunst

## Idle configuration
exec swayidle -w \
  	timeout 300 'swaylock -f' \
  	timeout 600 'swaymsg "output * dpms off"' \
  		resume 'swaymsg "output * dpms on"' \
  	before-sleep 'swaylock -f'
  	

################################## Rules ####################################

## Enable inhibit_idle when app is in fullscreen
for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

## Move MPV window
for_window [app_id="mpv"] exec $next-workspace-move

## Move VS Code to 3rd workspace
for_window [class="Code"] move container to workspace number 3; workspace 3

############################### Window ###################################     

## Configure gaps between windows
gaps inner 5

## Window Borders 
default_border pixel 3
default_floating_border none
smart_gaps on
# smart_borders on

## Window decoration
## class            	  border   backgr.   text     indicator  child_border
client.focused     		  #404040  #404040   #f0f0f0  #404040    #404040
client.unfocused   		  #212121  #212121   #f0f0f0  #212121    #212121
client.focused_inactive   #212121  #212121   #f0f0f0  #212121    #212121

## Wallpaper
output * bg ~/Pictures/Wallpapers/05.png fill


##################################### Config ###########################

## Font config
font pango: Inter:style=Regular 10.5

## Touchpad Config
 input "1267:91:Elan_Touchpad" {
	natural_scroll enabled
	tap enabled
  }
  
## Keyboard Config 
  input "1:1:AT_Translated_Set_2_keyboard" {
  	xkb_numlock enabled
  }
  
## Swap caps & escape key
	input * {
		xkb_options caps:swapescape
	}


################################### Keybindings ##########################
	
## Multimedia
bindsym XF86AudioMute exec pulsemixer --toggle-mute --get-mute | ~/.config/sway/scripts/notify.sh muted
bindsym XF86AudioRaiseVolume exec ponymix increase 5 | ~/.config/sway/scripts/notify.sh audio
bindsym XF86AudioLowerVolume exec ponymix decrease 5 | ~/.config/sway/scripts/notify.sh audio
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

## Brightness controls
bindsym --locked XF86MonBrightnessUp exec light -A 5 | light | cut -d '.' -f 1 | ~/.config/sway/scripts/notify.sh brightness
bindsym --locked XF86MonBrightnessDown exec light -U 5 | light | cut -d '.' -f 1 | ~/.config/sway/scripts/notify.sh brightness

## Start a terminal
bindsym $mod+Return exec $term

## Kill focused window
bindsym $mod+w kill

## Start your launcher
bindsym $mod+d exec $menu

## Start browser
bindsym $mod+c exec $browser

## Start VS Code
bindsym $mod+v exec $code

## Start Telegram
bindsym $mod+t exec $telegram

## Screenshot
bindsym Print exec grim ~/Pictures/$(date +%Y-%m-%d_%H-%M-%S).png && notify-send "Screenshot captured!"	  
bindsym Shift+Print exec grim -g "$(slurp)" ~/Pictures/$(date +%Y-%m-%d_%H-%M-%S).png && notify-send "Screenshot captured!"
bindsym Ctrl+Print exec grim - | wl-copy && notify-send "Screenshot copied to Clipboard!"
bindsym Ctrl+Shift+Print exec grim -g "$(slurp)" - | wl-copy && notify-send "Screenshot copied to Clipboard!"

## Start Files
bindsym $mod+f exec $files 

## Start Playerctl
bindsym Ctrl+period exec $next
bindsym Ctrl+comma exec $previous
bindsym Ctrl+space exec $pause

## Power Menu
bindsym $mod+p exec $power

## NM TUI Connect
bindsym $mod+n exec $connect

## BT Connect
bindsym $mod+b exec $bt

## Move windows to next/prev workspaces
bindsym $mod+Ctrl+right exec $next-workspace-move 
bindsym $mod+Ctrl+left exec $prev-workspace-move

## Switch next/prev workspaces
bindsym Ctrl+right workspace next_on_output
bindsym Ctrl+left workspace prev_on_output

## Cycle through workspaces
bindsym Alt+tab workspace next_on_output

## Cycle between workspaces
bindsym $mod+tab workspace back_and_forth

## Drag floating windows by holding down $mod and left mouse button.
floating_modifier $mod normal

## Reload the configuration file
bindsym $mod+Shift+r reload

## Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit sway?' -b 'Yes!' 'swaymsg exit'

## Move your focus around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## Move the focused window with the same, but add Shift
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5

## Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1; workspace 1
bindsym $mod+Shift+2 move container to workspace number 2; workspace 2
bindsym $mod+Shift+3 move container to workspace number 3; workspace 3
bindsym $mod+Shift+4 move container to workspace number 4; workspace 4
bindsym $mod+Shift+5 move container to workspace number 5; workspace 5

## Split windows horizontally & vertically
bindsym $mod+Shift+b splith
bindsym $mod+Shift+v splitv

## Make the current focus fullscreen
bindsym $mod+Shift+f fullscreen

## Toggle the current focus between tiling and floating mode
bindsym $mod+space floating toggle

## Swap focus between the tiling area and the floating area
bindsym $mod+Shift+space focus mode_toggle

## Move focus to the parent container
bindsym $mod+a focus parent

## Resizing containers:
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    ## Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Ctrl+Shift+r mode "resize"

## Status Bar:
bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
